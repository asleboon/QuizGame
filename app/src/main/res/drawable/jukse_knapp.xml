<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fd0303" />
            <gradient android:angle="-90" android:startColor="#b1cc28" android:endColor="#f5ea0d"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0606" />
            <solid android:color="#faf601"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fd0000" />
            <gradient android:angle="-90" android:startColor="#240cfc" android:endColor="#f408f0" />
        </shape>
    </item>
</selector>